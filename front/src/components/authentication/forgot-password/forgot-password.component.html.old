<div class="border-around paper-inside" [formGroup]="formMain">
  <!-- <section id="container-above">
    <button id="btn-back" mat-raised-button (click)="back()">{{'Voltar'}}</button>
  </section> -->
  <div class="space-title-logo"></div>
  <mat-card>
    <!-- <title-description-auth title class="font-title" [icon]="'language'" [title]="'Sonny App'" [styleContainerTitle]="'padding-top:8px;'" [titleStyle]="'font-family: Mynerve; font-size: 24px;'" [height]="'height:60px'"></title-description-auth> -->
    <div class="space-title-logo"></div>
    <div>
      <div>

        <div>
          <h1 class="title">Recuperação de senha</h1>
        </div>
      </div>

      <div [formGroup]="formMain">
        <mat-card class="m-4 border-card-categories-divide-comp">
          <div class="w-full grid grid-cols-1 gap-4 p-10 ">

            <div class="w-full">
              <mat-label class="text-color-main"> <b>Email</b></mat-label>
              <mat-form-field class="w-full" appearance="outline">
                <input #email matInput type="text" formControlName="email" aria-label="email">
                <mat-error>
                  <span *ngIf="formErrorAndTouched(formMain, 'email','required')">{{defaultMessages.requiredMsg}}</span>
                  <span *ngIf="formErrorAndTouched(formMain, 'email','email')">{{defaultMessages.emailMsg}}</span>
                </mat-error>
                <mat-icon class="main-color-scss" matSuffix>email</mat-icon>
              </mat-form-field>
            </div>

            <div>
              <captcha #token [hidden]="!formMain.valid"></captcha>
            </div>

          </div>

        </mat-card>
      </div>

      <!-- <div  [formGroup]="formMain">
                <div>
